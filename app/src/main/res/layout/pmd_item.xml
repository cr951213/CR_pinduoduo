<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="8px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/xprv_img3"
            android:layout_marginLeft="3px"
            android:src="@drawable/f"
            android:layout_width="50px"
            android:layout_margin="7px"
            android:layout_height="50px"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/pm_name3"
            android:text="韩薇"
            android:layout_margin="7px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差一个人拼成" />

            <LinearLayout
                android:id="@+id/ll_xsqg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingLeft="16px"
                android:paddingTop="8px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:paddingBottom="3px"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:paddingTop="3px"
                    android:text="02"
                    android:textColor="#000"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_minute"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="15"
                    android:textColor="#000"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_second"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="36"
                    android:textColor="#000"
                    android:textSize="12px" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_gravity="right"
            android:background="#f00"
            android:text="去拼单"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:textColor="#fff" />





    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/xprv_img4"
            android:layout_marginLeft="3px"
            android:layout_width="50px"
            android:layout_margin="7px"
            android:layout_height="50px"
            android:src="@drawable/c"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/pm_name4"
            android:text="星光"
            android:layout_margin="7px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差一个人拼成" />

            <LinearLayout
                android:id="@+id/ll_xsqg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingLeft="16px"
                android:paddingTop="8px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hour2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:paddingBottom="3px"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:paddingTop="3px"
                    android:text="02"
                    android:textColor="#000"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_minute2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:paddingBottom="3px"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:paddingTop="3px"
                    android:text="15"
                    android:textColor="#000"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_second2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:paddingBottom="3px"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:paddingTop="3px"
                    android:text="36"
                    android:textColor="#000"
                    android:textSize="12px" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_gravity="right"
            android:background="#f00"
            android:text="去拼单"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:textColor="#fff" />





    </LinearLayout>


</LinearLayout>